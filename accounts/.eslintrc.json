{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "globals": {
        "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.ts"]}]
    }
}
